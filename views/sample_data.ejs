<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"> -->
        <link rel="stylesheet" href="https://unpkg.com/98.css">
        <link rel='stylesheet' href='/stylesheets/style.css' />

    </head>
    <body>
        <div className="main">
                    
            <div class="window" style="width: 800px">
                <div class="title-bar">
                    <div class="title-bar-text">Binance API Requests</div>
                        <div class="title-bar-controls">
                            <button aria-label="Minimize"></button>
                            <button aria-label="Maximize"></button>
                            <button aria-label="Close"></button>
                        </div>
                </div>
                <div class="window-body">
                    <div class="container">
                        <h1 class><%= title %></h1>

                        <%  if(action == 'ask') { %>

                            <div class="card">
                                <div class="card-header">
                                    <div class="row">
                                        <div class="col"></div>
                                        <div class="col"></div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table1">
                                            <tr>
                                                <th>Symbol</th>
                                                <th>Date</th>
                                                <th>Price</th>
                                                <th>Price Change 24Hr</th>
                                            </tr>
                                            <%
                                            if(sampleData.length > 0)
                                            {
                                                sampleData.forEach(function(data){
                                            %>
                                            <tr>
                                                <td><%= data.symbol %></td>
                                                <td><%= data.date %></td>
                                                <td><%= data.price %></td>
                                                <td><%= data.priceChange24hr %></td>
                                            </tr>
                                            <%
                                                });
                                            }
                                            else
                                            {
                                            %>
                                            <tr>
                                                <td colspan="5">No Data Found</td>
                                            </tr>
                                            <%
                                            }
                                            %>
                                        </table>
                                    </div>
                                </div>
                                <a class="navigate" href="javascript:history.back()"><button>Main Page</button></a>
                            </div>

            
                        <% } else { %>
                            
                        <div class="card">
                            <div class="card-header">
                                <div class="row">
                                    <div class="col"></div>
                                    <div class="col"></div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table1">
                                        <tr>
                                            <th>Symbol</th>
                                            <th>Date</th>
                                            <th>Price</th>
                                            <th>Price Change 24Hr</th>
                                        </tr>
                                        <%
                                        if(sampleData.length > 0)
                                        {
                                            sampleData.forEach(function(data){
                                        %>
                                        <tr>
                                            <td><%= data.symbol %></td>
                                            <td><%= data.date %></td>
                                            <td><%= data.price %></td>
                                            <td><%= data.priceChange24hr %></td>
                                        </tr>
                                        <%
                                            });
                                        }
                                        else
                                        {
                                        %>
                                        <tr>
                                            <td colspan="5">No Data Found</td>
                                        </tr>
                                        <%
                                        }
                                        %>
                                    </table>
                                </div>
                            </div>
                            <a class="navigate" href="sample_data/anomaly"><button>Anomalies</button></a>
                            <!-- <div class="col-md-6">
                                <div class="mb-3">
                                    <label>Price</label>
                                    <input type="text" name="userinput" id="userinput" class="form-control" />
                                </div>

                                <div class="mb-3">
                                    <input type="submit" name="submit_button" class="btn btn-primary" value="Add" />
                                </div>
                            </div> -->
                        </div> 
            
                        <% } %>
            
                    </div> 
                </div>
            </div>

        </div>
    </body>
</html>
